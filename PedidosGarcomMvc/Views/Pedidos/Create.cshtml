@model PedidosGarcomMvc.Models.Pedido

@{
    ViewData["Title"] = "Novo Pedido";
}

    <h2>@ViewData["Title"]</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mesa" class="control-label"></label>
                <input asp-for="Mesa" class="form-control" />
                <span asp-validation-for="Mesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solicitante" class="control-label"></label>
                <input asp-for="Solicitante" class="form-control" />
                <span asp-validation-for="Solicitante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prato" class="control-label"></label>
                <input asp-for="Prato" class="form-control" />
                <span asp-validation-for="Prato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade_Prato" class="control-label"></label>
                <input asp-for="Quantidade_Prato" class="form-control" />
                <span asp-validation-for="Quantidade_Prato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bebida" class="control-label"></label>
                <input asp-for="Bebida" class="form-control" />
                <span asp-validation-for="Bebida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade_Bebida" class="control-label"></label>
                <input asp-for="Quantidade_Bebida" class="form-control" />
                <span asp-validation-for="Quantidade_Bebida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Retornar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
